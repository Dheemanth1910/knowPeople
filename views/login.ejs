<html lang="en" data-bs-theme="auto"><head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>knowPeople</title>
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3">
    <link rel="stylesheet" href="stylesheets/login.css">
    </head>
   
    <body class=" py-4 bg-body-tertiary">
<div class="d-flex justify-content-center p-2">
        <%if (messages.length > 0) { %>
          <div class="alert alert-danger">
            <%= messages[0] %>
          </div>
        <% } %>
      </div>
    <main class="d-flex align-items-center form-signin w-100 m-auto">
      
    <form method="POST" action="/login">
      <img class="mb-4" src="images/img.svg" alt="knowPeople Logo" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
  
      <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" name="username"placeholder="name@example.com" required>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
      </div>
  
      <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
      <span>New user ? </span>
      <a class="button brn-primary" href="/register" role="button">Register Here</a>
      <br>
      <span>Forgot Password ? </span>
      <a class="button brn-primary" href="/login/forgotPassword" role="button">Click Here</a>
      <p class="mt-5 mb-3 text-body-secondary">Â© knowPeople 2024</p>
    </form>
    
  
    </main>
<script>
      let messages = `<%=messages%>` ;
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
    </script>
    </body>
  </html>